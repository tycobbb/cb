<%= f.field(
  name,
  data: { controller: "image-field" }
) do |klass| %>
  <%= f.file_field(
    name,
    class: "Field-input",
    data: { action: "change->image-field#didPickFile" }
  ) %>
  <%= image_attachment_tag(
    attachment,
    class: "Field-imagePreview",
    data: { target: "image-field.preview" },
    width: 300,
    height: 500,
    alt: "#{name.to_s.titlecase} Preview"
  ) %>
<% end %>
